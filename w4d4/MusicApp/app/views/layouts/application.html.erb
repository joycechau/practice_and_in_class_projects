<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <br>
    <%= error %>
  <% end %>
<% end %>

<% if current_user %>
  <%= button_to "Log Out!", session_url, method: :delete %>
<% end %>

</body>
</html>
